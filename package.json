{
  "name": "slide-creator",
  "version": "0.1.0",
  "description": "Marp-based corporate slide generator with parameterized design",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "slide-creator": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "marp",
    "slide",
    "presentation",
    "corporate"
  ],
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.3",
    "ejs": "^4.0.1",
    "js-yaml": "^4.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@marp-team/marp-cli": "^4.2.3",
    "@types/ejs": "^3.1.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "eslint": "^9.20.0",
    "prettier": "^3.5.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.24.0",
    "vitest": "^4.0.18"
  }
}
