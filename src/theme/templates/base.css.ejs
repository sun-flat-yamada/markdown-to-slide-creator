/* @theme corporate */

/* ===== CSS Custom Properties ===== */
:root {
  --color-primary: <%= palette.primary %>;
  --color-secondary: <%= palette.secondary %>;
  --color-accent: <%= palette.accent %>;
  --color-negative: <%= palette.negative %>;
  --color-bg: <%= palette.background %>;
  --color-text: <%= palette.text %>;
  --color-muted: <%= palette.muted %>;
<% for (const g of palette.gradients) { %>
  --gradient-<%= g.name %>: linear-gradient(<%= g.direction %>, <%= g.stops.join(', ') %>);
<% } %>
  --header-height: <%= header.height %>;
  --footer-height: <%= footer.height %>;
  --margin-top: <%= margin.top %>;
  --margin-bottom: <%= margin.bottom %>;
  --margin-left: <%= margin.left %>;
  --margin-right: <%= margin.right %>;
}

/* ===== Base Slide Layout ===== */
section {
<% if (typeof slideSize === 'string') { %>
  /* size is handled by Marp directive */
<% } else { %>
  width: <%= slideSize.width %>;
  height: <%= slideSize.height %>;
<% } %>
  padding: var(--margin-top) var(--margin-right) var(--margin-bottom) var(--margin-left);
  font-family: "Noto Sans JP", "Helvetica Neue", Arial, sans-serif;
  color: var(--color-text);
  background: var(--color-bg);
  font-size: 22px;
  line-height: 1.6;
}

section h1 {
  font-size: 1.6em;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 0.3em;
}

section h2 {
  font-size: 1.3em;
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: 0.3em;
}

section h3 {
  font-size: 1.1em;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 0.2em;
}

section strong {
  color: var(--color-accent);
}

section a {
  color: var(--color-primary);
  text-decoration: underline;
}

section table {
  border-collapse: collapse;
  width: 100%;
  font-size: 0.85em;
}

section table th {
  background: var(--color-primary);
  color: #FFFFFF;
  padding: 8px 12px;
  text-align: left;
}

section table td {
  border-bottom: 1px solid #E0E0E0;
  padding: 6px 12px;
}

section table tr:nth-child(even) td {
  background: #F8F9FA;
}

section ul, section ol {
  margin-left: 0.5em;
}

section li {
  margin-bottom: 0.3em;
}

/* Separator line below slide title area */
section::before {
  content: '';
  display: block;
  position: absolute;
  top: calc(var(--header-height) + 10px);
  left: var(--margin-left);
  right: var(--margin-right);
  height: 1px;
  background: #E0E0E0;
}
