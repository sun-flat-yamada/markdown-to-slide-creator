/* ===== Cover Slide ===== */
section.cover {
  background: <%= cover.background %>;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding: 80px var(--margin-right) 120px var(--margin-left);
}

section.cover::before {
  display: none;
}

.cover-accent {
<% if (cover.show_accent_line) { %>
  width: 6px;
  height: 80px;
  background: <% if (cover.accent_line_color && cover.accent_line_color.startsWith('linear-gradient')) { %><%= cover.accent_line_color %><% } else { %>var(--color-primary)<% } %>;
  margin-bottom: 24px;
<% } else { %>
  display: none;
<% } %>
}

section.cover h1 {
  font-size: 2.8em;
  font-weight: 800;
  color: <%= cover.title_color || 'var(--color-text)' %>;
  margin-bottom: 0.1em;
  line-height: 1.2;
}

section.cover h2 {
  font-size: 1.6em;
  font-weight: 700;
  color: <%= cover.title_color || 'var(--color-text)' %>;
  margin-top: 0.2em;
  margin-bottom: 1.5em;
  opacity: 0.9;
}

section.cover p {
  font-size: 1em;
  color: var(--color-muted);
  margin-top: 2em;
}

/* Hide header separator on cover */
section.cover header {
  background: transparent !important;
  border-bottom: none !important;
}

section.cover header::after {
  display: none !important;
}

/* Hide page number on cover */
section.cover::after {
  display: none;
}

<% if (cover.show_logo) { %>
/* Logo on cover */
.cover-logo {
  position: absolute;
<% if (cover.logo_position === 'bottom-right') { %>
  bottom: 60px;
  right: 60px;
<% } else if (cover.logo_position === 'bottom-left') { %>
  bottom: 60px;
  left: var(--margin-left);
<% } else if (cover.logo_position === 'center') { %>
  bottom: 60px;
  left: 50%;
  transform: translateX(-50%);
<% } else { %>
  /* Default to bottom-left within content */
  bottom: 0;
  left: 0;
<% } %>
}
<% } %>

/* ===== Cover Slide (Image Right) ===== */
section.cover-image-right {
  background: <%= cover.background %>;
  display: grid;
  grid-template-columns: 1.2fr 0.8fr;
  padding: 0;
  height: 100%;
  width: 100%;
}

section.cover-image-right .cover-content {
  padding: 60px 60px 80px var(--margin-left);
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

section.cover-image-right .cover-content .cover-accent {
<% if (cover.show_accent_line) { %>
  width: 6px;
  height: 100px;
  background: <% if (cover.accent_line_color && cover.accent_line_color.startsWith('linear-gradient')) { %><%= cover.accent_line_color %><% } else { %>var(--color-primary)<% } %>;
  margin-bottom: 30px;
<% } else { %>
  display: none;
<% } %>
}

section.cover-image-right .cover-content h1 {
  font-size: 2.8em;
  font-weight: 800;
  color: <%= cover.title_color || 'var(--color-text)' %>;
  margin-bottom: 0.1em;
  line-height: 1.2;
}

section.cover-image-right .cover-content h2 {
  font-size: 1.6em;
  font-weight: 700;
  color: <%= cover.title_color || 'var(--color-text)' %>;
  margin-top: 0.2em;
  margin-bottom: 1.5em;
  opacity: 0.9;
}

section.cover-image-right .cover-content p {
  font-size: 1em;
  color: var(--color-muted);
  margin-top: 2em;
}

section.cover-image-right .cover-content .cover-logo {
  position: relative;
  margin-top: auto;
  bottom: 0;
  left: 0;
}

section.cover-image-right .cover-image-container {
  height: 100%;
  width: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

section.cover-image-right .cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Hide header/page number on cover-image-right */
section.cover-image-right header,
section.cover-image-right::after {
  display: none !important;
}
